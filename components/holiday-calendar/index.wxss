.holiday-container {
  padding: 0 20rpx 20rpx;
}

.holiday-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.holiday-list {
  background: #fff;
  border-radius: 12rpx;
}

.holiday-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.holiday-item:last-child {
  border-bottom: none;
}

.holiday-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.holiday-date {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}

.holiday-days {
  font-size: 28rpx;
  color: #007AFF;
}

.holiday-adjustment {
  font-size: 26rpx;
  color: #FF6B6B;
  margin-top: 10rpx;
} 

.holiday-source {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 20rpx 0;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx auto;
  padding: 20rpx 40rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.share-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.float-btns {
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.float-btn {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.share-btn {
  background: #07c160;
  color: #ffffff;
}

.save-btn {
  background: #ffffff;
  color: #333333;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.btn-icon {
  margin-right: 8rpx;
}

.btn-text {
  font-size: 28rpx;
}