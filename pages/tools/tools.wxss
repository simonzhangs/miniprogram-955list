page {
  background-color: #f0f2f5;
  padding: 24rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 48rpx;
}

.section > .title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.content {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
}

.grid-item {
  width: 50%;
  padding: 0 8rpx;
  margin-top: 45rpx;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.grid-item:nth-child(1),
.grid-item:nth-child(2) {
  margin-top: 0;
}

.grid-item-inner {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  height: 100%;
}

.grid-item-inner:active {
  transform: scale(0.98);
  background: #fafafa;
}

.grid-item .title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.grid-item .desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}